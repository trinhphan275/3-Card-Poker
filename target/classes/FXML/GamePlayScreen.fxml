<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1440.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" style="-fx-background-color: #31572c;">
    <!-- Top Info Section (Game Information) -->
    <top>
        <Text fill="#ffc600" text="Game Info: Welcome to Three Card Poker!" textAlignment="CENTER" style="-fx-font-family: 'Arial'; -fx-font-size: 20px;" />
    </top>

    <!-- Center: Player and Dealer Areas, Wagers, and Winnings -->
    <center>
        <VBox alignment="CENTER" prefHeight="600.0" prefWidth="1440.0" spacing="30.0">
            <!-- Player 1 Section -->
            <HBox alignment="CENTER" spacing="50.0">
                <VBox alignment="CENTER" spacing="20.0">
                    <Text fill="#ffc600" text="Player 1 Cards:" style="-fx-font-family: 'Arial'; -fx-font-size: 16px;"/>
                    <HBox spacing="10.0">
                        <ImageView fx:id="player1Card1" fitHeight="100.0" fitWidth="70.0"/>
                        <ImageView fx:id="player1Card2" fitHeight="100.0" fitWidth="70.0"/>
                        <ImageView fx:id="player1Card3" fitHeight="100.0" fitWidth="70.0"/>
                    </HBox>

                    <Text fill="#ffc600" text="Wagers" style="-fx-font-family: 'Arial'; -fx-font-size: 16px;"/>
                    <HBox spacing="20.0">
                        <VBox>
                            <Text fill="#ffc600" text="Ante" style="-fx-font-family: 'Arial'; -fx-font-size: 14px;"/>
                            <Text fill="#ffc600" fx:id="antePlayer1" text="0" style="-fx-font-family: 'Arial'; -fx-font-size: 14px;"/>
                        </VBox>
                        <VBox>
                            <Text fill="#ffc600" text="Pair Plus" style="-fx-font-family: 'Arial'; -fx-font-size: 14px;"/>
                            <Text fill="#ffc600" fx:id="pairPlusPlayer1" text="0" style="-fx-font-family: 'Arial'; -fx-font-size: 14px;"/>
                        </VBox>
                        <VBox>
                            <Text fill="#ffc600" text="Play" style="-fx-font-family: 'Arial'; -fx-font-size: 14px;"/>
                            <Text fill="#ffc600" fx:id="playPlayer1" text="0" style="-fx-font-family: 'Arial'; -fx-font-size: 14px;"/>
                        </VBox>
                    </HBox>

                    <Text fill="#ffc600" text="Total Winnings" style="-fx-font-family: 'Arial'; -fx-font-size: 16px;"/>
                    <Text fill="#ffc600" fx:id="totalWinningsPlayer1" text="0" style="-fx-font-family: 'Arial'; -fx-font-size: 14px;"/>
                </VBox>

                <!-- Player 2 Section -->
                <VBox alignment="CENTER" spacing="20.0">
                    <Text fill="#ffc600" text="Player 2 Cards:" style="-fx-font-family: 'Arial'; -fx-font-size: 16px;"/>
                    <HBox spacing="10.0">
                        <ImageView fx:id="player2Card1" fitHeight="100.0" fitWidth="70.0"/>
                        <ImageView fx:id="player2Card2" fitHeight="100.0" fitWidth="70.0"/>
                        <ImageView fx:id="player2Card3" fitHeight="100.0" fitWidth="70.0"/>
                    </HBox>

                    <Text fill="#ffc600" text="Wagers" style="-fx-font-family: 'Arial'; -fx-font-size: 16px;"/>
                    <HBox spacing="20.0">
                        <VBox>
                            <Text fill="#ffc600" text="Ante" style="-fx-font-family: 'Arial'; -fx-font-size: 14px;"/>
                            <Text fill="#ffc600" fx:id="antePlayer2" text="0" style="-fx-font-family: 'Arial'; -fx-font-size: 14px;"/>
                        </VBox>
                        <VBox>
                            <Text fill="#ffc600" text="Pair Plus" style="-fx-font-family: 'Arial'; -fx-font-size: 14px;"/>
                            <Text fill="#ffc600" fx:id="pairPlusPlayer2" text="0" style="-fx-font-family: 'Arial'; -fx-font-size: 14px;"/>
                        </VBox>
                        <VBox>
                            <Text fill="#ffc600" text="Play" style="-fx-font-family: 'Arial'; -fx-font-size: 14px;"/>
                            <Text fill="#ffc600" fx:id="playPlayer2" text="0" style="-fx-font-family: 'Arial'; -fx-font-size: 14px;"/>
                        </VBox>
                    </HBox>

                    <Text fill="#ffc600" text="Total Winnings" style="-fx-font-family: 'Arial'; -fx-font-size: 16px;"/>
                    <Text fill="#ffc600" fx:id="totalWinningsPlayer2" text="0" style="-fx-font-family: 'Arial'; -fx-font-size: 14px;"/>
                </VBox>
            </HBox>

            <!-- Dealer Section -->
            <VBox alignment="CENTER" spacing="20.0">
                <Text fill="#ffc600" text="Dealer Cards:" style="-fx-font-family: 'Arial'; -fx-font-size: 16px;"/>
                <HBox spacing="10.0">
                    <ImageView fx:id="dealerCard1" fitHeight="100.0" fitWidth="70.0"/>
                    <ImageView fx:id="dealerCard2" fitHeight="100.0" fitWidth="70.0"/>
                    <ImageView fx:id="dealerCard3" fitHeight="100.0" fitWidth="70.0"/>
                </HBox>

                <Text fill="#ffc600" text="Game Info" style="-fx-font-family: 'Arial'; -fx-font-size: 16px;"/>
                <Text fill="#ffc600" fx:id="gameInfo" text="Dealer has at least Queen high" style="-fx-font-family: 'Arial'; -fx-font-size: 14px;"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
